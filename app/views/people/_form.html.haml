- form_for(@person) do |f|
  = f.error_messages

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :email
    %br
    = f.text_field :email

  %p
    = f.label :address
    %br
    = f.text_field :address

  %p
    = f.label :city
    %br
    = f.text_field :city

  %p
    = f.label :zip_code
    %br
    = f.text_field :zip_code

  %p
    = f.label :phone
    %br
    = f.text_field :phone

  %p
    = f.submit 'Save'
